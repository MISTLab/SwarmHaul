function step()
{
    if(time_step == 1 and id == 1){
        LoadGTMap()
        log(id,"waypoint")
        # Call the one shot planner to compute the path for the current map
        path_controls = OneShotPathPlanner(0,0,5,0,0.2)
        table_print_path(path_controls)
    }

    time_step = time_step + 1 

}



